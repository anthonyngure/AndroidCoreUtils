<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            app:startDestination="@+id/mainFragment"
            android:id="@+id/main_navigation">

    <fragment
            android:id="@+id/mainFragment"
            android:name="ke.co.toshngure.androidcoreutils.MainFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_main">


    </fragment>

    <fragment
            android:id="@+id/postsFragment"
            android:name="ke.co.toshngure.androidcoreutils.posts.PostsFragment"
            android:label="@string/posts"
            tools:layout="@layout/fragment_base"/>

    <fragment
            android:id="@+id/albumsFragment"
            android:name="ke.co.toshngure.androidcoreutils.albums.AlbumsFragment"
            android:label="@string/albums"
            tools:layout="@layout/fragment_base"/>

    <fragment
            android:id="@+id/photosFragment"
            android:name="ke.co.toshngure.androidcoreutils.photos.PhotosFragment"
            android:label="@string/photos"
            tools:layout="@layout/fragment_base">

        <argument
                android:name="albumId"
                app:argType="long"
                app:nullable="false"/>

    </fragment>

    <fragment
            android:id="@+id/testImagesPickerFragment"
            android:name="ke.co.toshngure.androidcoreutils.TestImagesPickerFragment"
            android:label="@string/images_picker"
            tools:layout="@layout/fragment_images_picker"/>


</navigation>
